<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>


    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label for="title"></label>
                <input type="text" name="blog[title]" id="title" value= "<%= blog.title %>">
            </div>
            
            <div class="field">
                <label for="image"></label>
                <input type="text" name="blog[image]" id="image" value= "<%= blog.image %>">
            </div>
            
            <div class="field">
                <label for="Body"></label>
                <textarea name="blog[body]" id="" cols="30" rows="10" required > <%= blog.title %> </textarea>
            </div>
        <input type="submit" name="" id="" class="ui big blue basic button">
    </form>


</div>
<% include partials/footer %>


