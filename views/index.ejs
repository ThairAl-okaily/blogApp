
<% include partials/header %>
<h1>index page is here </h1>

<div class="ui main text container">
    <div class="ui hug header">RESTfull blog app</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach( function (blogs){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blogs.image %>" alt="">
                    </div>
                    <div class="content">
                        <a href="/blogs/<%= blogs._id %>" class="header"> <%= blogs.title %> </a>
                        <div class="meta">
                            <span>
                                <%= blogs.created.toDateString() %>
                            </span>
                        </div>
                        <div class="description">
                            <p>
                                <%= blogs.body.substring(0, 100) %>...
                            </p>
                        </div>
                        <div class="extra">
                            <a href="/blogs/<%= blogs._id %>" class="ui floated basic violet button">
                                <%= blogs.title %>
                                Read More 
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>




<% include partials/footer %>